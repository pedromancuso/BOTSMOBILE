<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.bots" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BOTS</name>
    <description>BOTS APP</description>
    <author email="bots@bots.com" href="http://bots.com">BOTS TEAM</author>
    <content src="applanding.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-mqtt"/>
    <plugin name="cordova-plugin-device"/>
    <plugin name="cordova-plugin-splashscreen"/>
    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name = "SplashMaintainAspectRatio" value = "true" />
    <splash src="./www/img/logo.png"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="./www/img/logo.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
